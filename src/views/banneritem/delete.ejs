<!-- Delete view for the banneritem editor-->
<br/>
<br/>
<h1>Confirm deletion of <%= title %></h1>
<br/>
<!--gives the page a title that will be used for the Testing to ensure proper page load-->
<script>
	window.onload = function(){ 
	 document.title = "Banner Item Delete"; 
 }
   </script>
<table class="table table-hover table-bordered">
        <!--set up table for viewing the information that will be deleted -->
    <thead>
      <tr>
       <th>ID</th>
       <th>Description</th>
       <th>Start Date and Time for Banner Display</th>
       <th>End Date and Time for Banner Display</th>
       <th>Priority</th>
       <th>Link</th>
      
    </tr>
    </thead>
    <tbody>
            <!--inserting the data into the table -->
        <tr>
                <td><%= BannerItem._id %></td>
                <td><%= BannerItem.description %></td>
                <td><%= BannerItem.startDate %> <%= BannerItem.startTime %></td>
                <td><%= BannerItem.endDate %> <%= BannerItem.endTime %></td>
                <td><%= BannerItem.priority %></td>
                <td><%= BannerItem.link %></td>
              
        </tr>
</tbody>
</table>
<br/>

<div class="row">
<div class="col-md-2">
        <!--Return to list -->
<form method="get" action="/banneritem">
		<input type="submit" value="Return to list" class="btn btn-caution" />
	</form>
</div>
<div class="col-md-10"> 
        <!--Post the new item -->
<form method="POST" action="/banneritem/delete/<%= BannerItem._id %>">
	<button type="submit" id="deletebtn" class="btn btn-danger pull-right" >Delete this item</button>
</form>
</div>
</div>
