<br/>

<br/>
<h2>Create a new Banner Announcement</h2>
<p>There are currently
	<%= BannerItem.query.length %> Banner Items. </p>
<br/>
<% 
maxID=0; 
for (var i=0; i<BannerItem.query.length; i++) {
    if(BannerItem.query[i]._id > maxID) {
        maxID=BannerItem.query[i]._id;
        }
}
%>
	<p>The largest ID is
		<%= maxID %>. </p>
	
	<div class="content">
		<div>
			<form name="banneritem" method="POST" action="/banneritem/save" + _id.value>

				<div class="form-group" id=frm>
					<label for="_id">ID</label>
					<input type="number" class="form-control" id="_id" name="_id" value="<%= maxID+1 %>" required readonly>
				</div>

				
<!-- 
				
-->

				<div class="form-group">
						<label for="description">Description:</label>
						<input type="text" class="form-control" id="Description" name="description"  required maxlength="50">
					</div>
				
				
					<div class="form-group ">
							<label for="startDate">Start Date for Banner Display:</label>
							<div class="input-group datepick1">
									
							  <input type="text" class="form-control" name="startDate" id="startDate" value="" required>
							  <div class="input-group-addon">
								<span class="glyphicon glyphicon-calendar"></span>
							  </div>
							</div>
						  </div>
					<script>
							$(document).ready(function() {
  $('.datepick1').datetimepicker({
    format: 'MM-DD-YYYY',
    ignoreReadonly: true
  });
});

						</script>	
				            

			</div>
			<div class="form-group">
				<label for="startTime">Start Time:</label>
				<input type="text" class="form-control" id="startTime" name="startTime"  required maxlength="50">
			</div>
			<div class="form-group ">
					<label for="endDate">End Date for Banner Display:</label>
					<div class="input-group datepick2">
							
					  <input type="text" class="form-control" name="endDate" id="endDate" value="" required >
					  <div class="input-group-addon">
						<span class="glyphicon glyphicon-calendar"></span>
					  </div>
					</div>
					</div>
			<script>
					$(document).ready(function() {
$('.datepick2').datetimepicker({
format: 'MM-DD-YYYY',
ignoreReadonly: true
});
});
				</script>	
					<div class="form-group">
						<label for="endTime">End Time:</label>
						<input type="text" class="form-control" id="endTime" name="endTime"  required maxlength="50">
					</div>

					<div class="form-group">
						<label>Priority:</label>
						<input type="checkbox" class="form-control" id="priority" name="priority" value=true >
						<input type="hidden" class="form-control" id="priority2" name="priority" checked value=false>
					</div>

					<div class="form-group">
						<label for="link">Link to Url:</label>
						<input type="text" class="form-control" id="link" name="link"  maxlength="100">
					</div>
				
				<div class="form-group">
					<input type="submit" value="Post new entry" class="btn btn-primary" />
				</div>
			</form>
			<br/>
			<script>
				function checkboxSet(){
				if(document.getElementById("priority2").checked) {
   					 document.getElementById('priority2').disabled = true;
				}
			}
				</script>
			<form method="get" action="/banneritem" onsubmit="checkboxSet()">
				<input type="submit" value="Return to list" class="btn btn-caution" />
			</form>
		</div>
	</div>