<!-- index view for the banner item editor, shows all items currently in the database and gives options to perform data modification-->
<% console.log(BannerItem.query); %>

  <!-- Page Content -->
  <script>
	window.onload = function(){ 
	 document.title = "Banner Items"; 
 }
   </script>
	<div class="container">
		<hr>
		<h2 id="testing">Banner Items</h2>
		<p>There are
			<%= BannerItem.query.length %>  Banner Items <br/>
				<a href="/banneritem/create" class="btn btn-primary"><span class="glyphicon glyphicon-pencil"></span>Add a new one.</a></p>
		<table class="table" border="1">
			<thead>
				<tr>
					<th>ID</th>
					<th>Description</th>
					<th>Start Date and Time for Banner Display</th>
					<th>End Date and Time for Banner Display</th>
					<th>Priority</th>
					<th>Link</th>
					
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				<% for (var i = 0; i < BannerItem.query.length; i++) { %>
					<tr>
						<td>
							<%=  BannerItem.query[i]._id %>
						</td>
						<td>
							<%=  BannerItem.query[i].description %>
						</td>
						<td>
							<%=  BannerItem.query[i].startDate %> <%=  BannerItem.query[i].startTime %>
						</td>
						<td>
							<%=  BannerItem.query[i].endDate %> <%=  BannerItem.query[i].endTime %>
						</td>
						<td>
							<%=  BannerItem.query[i].priority %>
						</td>
						<td>
							<%=  BannerItem.query[i].link %>
						</td>
						
						<td>
							<a href="banneritem/delete/<%=  BannerItem.query[i]._id %>"class="btn btn-danger" >	<span class="glyphicon glyphicon-trash"></span> Delete </a> |
							<a href="banneritem/details/<%= BannerItem.query[i]._id %>"class="btn btn-info">	  <span class="glyphicon glyphicon-list-alt"></span> Details </a> |
							<a href="banneritem/edit/<%=    BannerItem.query[i]._id %>"class="btn btn-warning"> <span class="glyphicon glyphicon-edit"></span> Edit </a>
						</td>
					</tr>
					<% } %>
					
			</tbody>
		</table>
	</div>
	