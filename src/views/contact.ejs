
<!-- Contact Page Content Begins below -->
  <div class="container" style='background-color: white;'>

   <br>
   <br>
    <!-- var x = document.getElementById("myForm"); -->
    <h1>Contact Form</h1>
    <div class="row" >
        
        <div class = "col-md-5" >
        <!--Contact Form can be placed inside here-->
        
        <form action="/contact" method="post" id=contactform >

          <!-- Form group for name -->
      
          <div class="form-group">
            <label class="col-md-4 control-label">Name</label>
            <div class="col-md-4 inputGroupContainer">
              <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                <input name="inputname" placeholder="Your name" class="form-control" type="text" maxlength="80" required value="">
              </div>
            </div>
          </div>

          
      
          <!-- Form group for email -->
      
          <div class="form-group">
            <label class="col-md-8 control-label">E-Mail</label>
            <div class="col-md-8 inputGroupContainer">
              <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                <input name="inputemail" placeholder="Email address" class="form-control" type="email" maxlength="80"
                  required value="">
              </div>
            </div>
          </div>
      
          <div class="form-group">
            <label class="col-md-8 control-label">Reason for Contact</label>
            <div class="col-md-8 inputGroupContainer">
              <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                <select name="inputreason"placeholder="General Inquiry"class="form-control" required value="">
                  <option value="">Select a Contact Form</option>
                  <option value="General Inquiry">General Inquiry</option>
                  <option value="Field Reservation">Field Reservation</option>
                  <option value="Complaint">Complaint</option>
                  <option value="Other">Other</option>
              </select>
              </div>
            </div>
          </div>
          <!-- Form group for company name -->
      
          <div class="form-group" id="company-group">
            <label class="col-md-4 control-label">Company</label>
            <div class="col-md-4 inputGroupContainer">
              <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-briefcase"></i></span>
                <input name="inputcompany" placeholder="Company" class="form-control" type="text" maxlength="80" value="">
              </div>
            </div>
          </div>
      
          <!-- Form group for comment -->
      
          <div class="form-group">
            <label class="col-md-4 control-label">Comment</label>
            <div class="col-md-4 inputGroupContainer">
              <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                <textarea name="inputcomment" placeholder="Your comment" class="form-control" maxlength="1000" required value=""></textarea>
              </div>
            </div>
          </div>
      
          <!-- Form group for button  -->
      
          <div class="form-group">
            <label class="col-md-4 control-label"></label>
            <div class="col-md-4">
              <button type="submit" class="btn btn-primary bg-nw-green">Send message <span class="glyphicon glyphicon-send"></span></button>
            </div>
          </div>
      
        </form>
          
            <!-- <button type="submit" form="contactform" value="Submit">Submit</button> -->
            
        </div>
        
        <div class="col-md-4"></div>
    </div>



<!--Page Content Ends  -->
    
